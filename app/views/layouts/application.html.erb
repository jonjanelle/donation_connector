<!DOCTYPE html>
<html>
  <head>
    <title>Donation Connector</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="fixed-nav sticky-footer bg-light" id="page-top">
      <%= render partial: 'shared/navbar' %>
      <div class="container-fluid">
        
        <% if notice %>
          <div class="container alert alert-success alert-dismissible fade-in header-margin-top flash-box" role=alert>
            <button type=button class=close data-dismiss=alert aria-label=Close>
              <span aria-hidden=true class="font-lg">&times;</span>
            </button>
            <div class="font-lg">
              <%= notice %>
            </div>
          </div>
        <% end %>
        <% if alert %>
          <div class="container alert alert-danger alert-dismissible fade-in header-margin-top flash-box" role=alert>
            <button type=button class=close data-dismiss=alert aria-label=Close>
              <span aria-hidden=true class="font-lg">&times;</span>
            </button>
            <div class="font-lg">
              <%= notice %>
            </div>
          </div>
        <% end %>
      </div>

      <%= yield %>

      <%= yield :javascript %>
  </body>
</html>
