<div class="row">
  <div class="col-lg-12">
    <!-- Example Bar Chart Card-->
    <div class="card mb-3 light-hover-box">
      <div class="card-header alert-info text-medium">
        <i class="fa fa-bar-chart"></i>
        Donation Request History</div>
      <div class="card-body">
        <div class="row">
          <div class="col-sm-8 my-auto">
            <div class="table-responsive">
              <table class="table table-condensed text-center">
                <thead>
                  <tr>
                    <th>Description</th>
                    <th>Date Created</th>
                    <th># Items Requested</th>
                    <th># Items Pledged</th>
                    <th>Contact Person</th>
                  </tr>
                </thead>
                <tbody>
                  <% donation_requests.each do |dr| %>
                    <tr>
                      <td><%= dr.description %></td>
                      <td><%= dr.date_created %></td>
                      <td><%= link_to dr.donation_items.count, "#" %></td>
                      <td><%= link_to dr.donation_items.count, "#" %></td>
                      <td><%= link_to dr.contact_name, "#" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col-sm-4 text-center my-auto">
            <div class="selection-box">
              <div class="h4 mb-0 text-primary"><%= donation_requests.count %></div>
              <div class="small text-muted">Total Requests</div>
            </div>
            <hr class="hr-dashed">
            <div class="selection-box">
              <div class="h4 mb-0 text-primary"><%= items_received.map(&:quantity).sum %></div>
              <div class="small text-muted">Items Received</div>
            </div>
            <hr class="hr-dashed">
            <div class="selection-box">
              <div class="h4 mb-0 text-warning"><%= donations.count %></div>
              <div class="small text-muted">Donors</div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer small text-muted"></div>
    </div>
  </div>
</div>
